#!/usr/bin/env bash
#
# Google Drive backup script:
#  - mount remote NAS filesystem with CIFS/SMB if needed
#  - download Google Drive files
#  - sync files to remote NAS
#
# requires:
#  - rsync
#  - google-drive-export

set -eou pipefail
trap 'echo "Aborted."; exit 1' INT


EXPECTED_HOSTS=("minime" "raspberrypi")
NAS_HOST="bitz"
BACKUP_LOCAL_PATH="${HOME}/backup"
NAS_MNT="/mnt/${NAS_HOST}"
GOOGLE_DRIVE_BACKUP_DIR="GoogleDrive_Backup"
ORIGINAL_DIR="${PWD}"
SEP="----------------------------------------------------------------"

die () {
    tput bold; tput setaf 1; echo -en "\u2717 " 1>&2; tput sgr0
    tput bold; echo "$*" 1>&2; tput sgr0
    cd "${ORIGINAL_DIR}"
    exit 1
}

ok () {
    tput bold; tput setaf 10; echo -en "\u2714  " 1>&2; tput sgr0
    tput bold; echo "$*" 1>&2; tput sgr0
}

check_host () {
    local can_run="false"
    for i in {0..1}; do
        local host="${EXPECTED_HOSTS[${i}]}"
        if [ "${HOSTNAME}" == "${host}" ]; then
            can_run="true"
        fi
    done
    if [ "${can_run}" == "false" ] ; then
        die "fatal: can't run on this host: ${HOSTNAME}"
    fi
}

check_configuration () {
    if ! type rsync >/dev/null 2>&1; then
        die "fatal: rsync not found"
    fi
    if ! type google_drive_export >/dev/null 2>&1; then
        die "fatal: google_drive_export not found"
    fi
}

delete_old_backups () {
    rm -rf ./exported_files
    rm -rf "./${GOOGLE_DRIVE_BACKUP_DIR}"
}

timer () {
    local start_time=${SECONDS}
    "$@"
    local end_time=${SECONDS}
    local duration=$((end_time - start_time))
    local hours=$((duration / 3600))
    local minutes=$(((duration % 3600) / 60))
    local seconds=$((duration % 60))
    printf -v elapsed_time "%02d:%02d:%02d" "${hours}" "${minutes}" "${seconds}"
}

do_backup () {
    echo "downloading Google Drive backup ..."
    google_drive_export
    echo
    echo "${SEP}"
    mv ./exported_files "./${GOOGLE_DRIVE_BACKUP_DIR}"
    sync "${BACKUP_LOCAL_PATH}"
    echo
    echo "syncing "\
        "${BACKUP_LOCAL_PATH}/${GOOGLE_DRIVE_BACKUP_DIR} to "\
        "${NAS_MNT}/${GOOGLE_DRIVE_BACKUP_DIR} ..."
    echo
    rsync \
        --delete-during \
        --fsync \
        --human-readable \
        --links \
        --no-whole-file \
        --progress \
        --recursive \
        --safe-links \
        --stats \
        --times \
        --verbose \
        --info=progress2 \
        "${BACKUP_LOCAL_PATH}/${GOOGLE_DRIVE_BACKUP_DIR}/" \
        "${NAS_MNT}/${GOOGLE_DRIVE_BACKUP_DIR}/"
    sync "${NAS_MNT}"
}

check_host
echo
echo "changing directory to: ${BACKUP_LOCAL_PATH} ..."
cd "${BACKUP_LOCAL_PATH}"
check_configuration
echo
mount-bitz
echo
echo "deleting old local backups ..."
delete_old_backups
echo "starting backup job ..."
echo
echo "${SEP}"
echo
timer do_backup
echo
echo "${SEP}"
echo
echo "changing directory back to: ${ORIGINAL_DIR} ..."
cd "${ORIGINAL_DIR}"
echo
echo "elapsed time: ${elapsed_time}"
echo
ok "backup complete"
