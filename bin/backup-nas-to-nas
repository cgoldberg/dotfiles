#!/usr/bin/env bash
#
# NAS backup script:
#  - mount remote NAS filesystems with CIFS/SMB if needed
#  - sync files from source NAS to destination NAS
#
# requires:
#  - rsync

set -eou pipefail


EXPECTED_HOSTS=("minime" "raspberrypi")

# 2-bay QNAP
SOURCE_NAS_HOST="bitz"
SOURCE_NAS_MNT="/mnt/${SOURCE_NAS_HOST}"

# 1-bay QNAP
DESTINATION_NAS_HOST="bytez"
DESTINATION_NAS_MNT="/mnt/${DESTINATION_NAS_HOST}"

NAS_HOSTS=("${SOURCE_NAS_HOST}" "${DESTINATION_NAS_HOST}")
NAS_MNTS=("${SOURCE_NAS_MNT}" "${DESTINATION_NAS_MNT}")

SEP="----------------------------------------------------------------"

die () {
    tput bold; tput setaf 1; echo -en "\u2717 " 1>&2; tput sgr0
    tput bold; echo "$*" 1>&2; tput sgr0
    exit 1
}

ok () {
    tput bold; tput setaf 10; echo -en "\u2714  " 1>&2; tput sgr0
    tput bold; echo "$*" 1>&2; tput sgr0
}

check_host () {
    local can_run="false"
    for i in {0..1}; do
        local host="${EXPECTED_HOSTS[${i}]}"
        if [ "${HOSTNAME}" == "${host}" ]; then
            can_run="true"
        fi
    done
    if [ "${can_run}" == "false" ] ; then
        die "fatal: can't run on this host: ${HOSTNAME}"
    fi
}

check_configuration () {
    if [ ! -x "$(type -pP rsync)" ]; then
        die "fatal: rsync not found"
    fi
}

timer () {
    local start_time=${SECONDS}
    "$@"
    local end_time=${SECONDS}
    local duration=$((end_time - start_time))
    local hours=$((duration / 3600))
    local minutes=$(((duration % 3600) / 60))
    local seconds=$((duration % 60))
    printf -v elapsed_time "%02d:%02d:%02d" "${hours}" "${minutes}" "${seconds}"
}

do_backup () {
    echo "syncing ${SOURCE_NAS_MNT} to ${DESTINATION_NAS_MNT} ..."
    echo
    rsync \
        --delete-during \
        --fsync \
        --human-readable \
        --links \
        --no-whole-file \
        --progress \
        --recursive \
        --safe-links \
        --stats \
        --times \
        --verbose \
        --verbose \
        --info=progress2 \
        "${SOURCE_NAS_MNT}/" \
        "${DESTINATION_NAS_MNT}/" \
        | grep -v "file_list pointer array"
}

check_host
check_configuration
echo
mount-bitz
mount-bytez
echo
echo "starting backup job ..."
echo
echo "${SEP}"
echo
sync
timer do_backup
echo "${SEP}"
echo
sync-nas
echo
echo "elapsed time: ${elapsed_time}"
echo
ok "backup complete"
